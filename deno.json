{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@okdaichi/golikejs",
  "version": "0.7.0",
  "exports": {
    ".": "./src/mod.ts",
    "./sync": "./src/sync/mod.ts",
    "./context": "./src/context/mod.ts",
    "./bytes": "./src/bytes/mod.ts",
    "./io": "./src/io/mod.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert"
  },
  "tasks": {
    "test": "deno test",
    "test:watch": "deno test --watch",
    "test:coverage": "deno test --coverage=coverage && deno coverage coverage",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "check": "deno check src/**/*.ts"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["src/"]
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["require-await", "no-unused-vars", "no-explicit-any", "no-await-in-sync-fn", "no-redeclare"]
    }
  },
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "deno.ns"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": false
  },
  "exclude": [
  ]
}
